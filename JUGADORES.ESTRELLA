def mostrarlista():
    ventana2= Tk()
    ventana2.geometry("500x600")
    titulo=Label(ventana2, text="Lista de jugadores", font="Helvetica")
    titulo.pack()
    datos = dp.read_csv('test.csv')
    label=Label(ventana2, text=datos)
    label.pack(pady=20)
    salir=Button(ventana2, text="Volver al men√∫", command=ventana2.destroy)
    salir.pack(pady=20)
def guardar():
    h1=pais.get()+','
    h2=nombre.get()+','
    h3=club.get()+','
    h4=posicion.get()+','
    h5=edad.get()+','
    h6=altura.get()+'\n'
    inputFile= open("test.csv", "a")
    inputFile.write(h1)
    inputFile.write(h2)
    inputFile.write(h3)
    inputFile.write(h4)
    inputFile.write(h5)
    inputFile.write(h6)
    inputFile.close()

#asdasd
def quitar_fila():
    h=open("test.csv")
    filas=h.readlines()
    filas.pop(len(filas)-1)
    h.close()
    with open("test.csv", "w") as out:
        for line in filas:
            out.write(line.strip() + "\n")

def guardar_en_excel():
    p = dp.read_csv("test.csv")
    p.to_excel("GUARDAR.xlsx")

def cargar_excel_a_csv():
    d = dp.read_excel("GUARDAR.xlsx")
    d.to_csv("test.csv",index=0)

